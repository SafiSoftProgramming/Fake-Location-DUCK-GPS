<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transYallColor"
    android:orientation="vertical">

    <TextView
        android:id="@id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10.0dip"
        android:text="Save Current Location"
        android:textColor="@android:color/black"
        android:textSize="15.0sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="310.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10.0dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:text="Latitude"
            android:textColor="@android:color/black"
            android:textSize="15.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/Latitude_txv"
            android:layout_width="0.0dip"
            android:layout_height="30.0dip"
            android:layout_weight="2.0"
            android:text="42.32545436"
            android:textColor="@android:color/black"
            android:textSize="15.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="310.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10.0dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:text="Longitude"
            android:textColor="@android:color/black"
            android:textSize="15.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/Longitude_txv"
            android:layout_width="0.0dip"
            android:layout_height="30.0dip"
            android:layout_weight="2.0"
            android:text="34.3253454"
            android:textColor="@android:color/black"
            android:textSize="15.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/layout_locname"
        android:layout_width="310.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10.0dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_weight="1.0"
            android:text="Loc Name"
            android:textColor="@android:color/black"
            android:textSize="15.0sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/location_name_edtx"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10.0dip"
        android:background="@color/transYallColor"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/btn_yes"
            android:layout_width="140.0dip"
            android:layout_height="30.0dip"
            android:layout_margin="5.0dip"
            android:background="@android:color/white"
            app:srcCompat="@drawable/save_black_24dp" />

        <ImageButton
            android:id="@id/btn_no"
            android:layout_width="140.0dip"
            android:layout_height="30.0dip"
            android:layout_margin="5.0dip"
            android:background="@android:color/white"
            app:srcCompat="@drawable/cancel_black_24dp" />
    </LinearLayout>
</LinearLayout>