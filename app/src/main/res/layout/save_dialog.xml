<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transYallColor"
    android:orientation="vertical">

  <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Save Current Location"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/black"/>
    
    
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Latitude"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/Latitude_txv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:text="42.32545436"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Longitude"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Longitude_txv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:text="34.3253454"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_locname"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Loc Name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

    <EditText
        android:id="@+id/location_name_edtx"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/transYallColor"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_yes"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            app:srcCompat="@drawable/save_black_24dp"/>

        <ImageButton
            android:id="@+id/btn_no"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            app:srcCompat="@drawable/cancel_black_24dp"/>
    </LinearLayout>
</LinearLayout>